<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pranav.gocorona">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".about"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".preventcorona" />
        <activity
            android:name=".preventions"
            android:label="@string/title_activity_preventions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".resources" />
        <activity android:name=".symptoms" />
        <activity android:name=".helplinenumbers" />
        <activity android:name=".stats" />
        <activity android:name=".GlobalStats" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailActivity" />
        <activity android:name=".AffectedCountries" />
    </application>

</manifest>